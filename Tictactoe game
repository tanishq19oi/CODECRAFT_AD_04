        @keyframes popIn {
            0% { transform: scale(0.5); opacity: 0; }
            80% { transform: scale(1.1); opacity: 1; }
            100% { transform: scale(1); }
        }

        .winner-cell {
            background-color: rgba(0, 255, 0, 0.7);
            border-color: var(--screen-green);
            animation: pulse-win 0.8s infinite alternate;
        }

        @keyframes pulse-win {
            from { box-shadow: 0 0 10px var(--screen-green); }
            to { box-shadow: 0 0 25px var(--screen-green); }
        }
        
        @keyframes countdown-pulse {
            0% { transform: scale(0.5); opacity: 0; }
            50% { transform: scale(1.2); opacity: 1; }
            100% { transform: scale(1); opacity: 0; }
        }

        .animating-text {
            animation: countdown-pulse 1s ease-out forwards;
        }

        .main-button {
            font-family: var(--arcade-font);
            text-shadow: 2px 2px 0px #000;
            transition: transform 0.1s ease-out, background-color 0.2s;
        }

        .main-button:active {
            transform: scale(0.95);
        }

        .deco-xo {
            font-family: var(--arcade-font);
            font-size: 4rem; 
            text-shadow: 4px 4px 0px #000;
            line-height: 1;
            animation: bounce-xo 2s ease-in-out infinite;
        }

        .deco-xo:nth-child(1) {
            animation-delay: 0s;
        }

        .deco-xo:nth-child(2) {
            animation-delay: 0.2s;
        }

        .deco-xo:nth-child(3) {
            animation-delay: 0.4s;
        }

        @keyframes bounce-xo {
            0%, 100% { transform: translateY(0) rotate(-15deg); }
            50% { transform: translateY(-20px) rotate(-15deg); }
        }

        .deco-xo:nth-child(2) {
            animation-name: bounce-xo-2;
        }

        @keyframes bounce-xo-2 {
            0%, 100% { transform: translateY(0) rotate(5deg); }
            50% { transform: translateY(-20px) rotate(5deg); }
        }

        .deco-xo:nth-child(3) {
            animation-name: bounce-xo-3;
        }

        @keyframes bounce-xo-3 {
            0%, 100% { transform: translateY(0) rotate(15deg); }
            50% { transform: translateY(-20px) rotate(15deg); }
        }

        .win-overlay {
            position: absolute;
            inset: 0;
            background-color: rgba(0, 0, 0, 0.85);
            display: none;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 20;
            border-radius: 10px;
        }

        .win-overlay.show {
            display: flex;
            animation: fadeIn 0.3s ease-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .win-symbol {
            font-size: 8rem;
            font-family: var(--arcade-font);
            animation: winBounce 0.6s ease-out infinite alternate;
            margin-bottom: 2rem;
        }

